network:
  version: 2
  renderer: networkd

  ethernets:
    {{ ansible_default_ipv4.interface }}:
      dhcp4: no
      dhcp6: no

  bridges:
    br0:
      interfaces: [ {{ ansible_default_ipv4.interface }} ]
      addresses: [ {{ ip }}/24 ]
      gateway4: {{ gw }}
      mtu: 1500
      nameservers:
        addresses: [ {{ ns }} ]
      parameters:
        stp: true
        forward-delay: 4
      dhcp4: no
      dhcp6: no
